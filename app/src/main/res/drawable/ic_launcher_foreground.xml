<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Design: Audia Premium Identity -->
    <!-- Base: Open Book. Center: Ascending Waves. Frame: Headphones. -->

    <!-- 1. HEADPHONES ARCH (Sleek Indigo Gradient) -->
    <path
        android:pathData="M28,52 V44 C28,29.64 39.64,18 54,18 C68.36,18 80,29.64 80,44 V52"
        android:strokeWidth="5"
        android:strokeLineCap="round">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startY="18"
                android:startX="54"
                android:endY="52"
                android:endX="54"
                android:type="linear">
                <item android:offset="0.0" android:color="#FF7C4DFF"/> <!-- Light Deep Purple -->
                <item android:offset="1.0" android:color="#FF6200EE"/> <!-- Deep Purple -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- 2. THE OPEN BOOK (Knowledge Gold) -->
    <path
        android:pathData="M32,70 C32,70 43,78 54,70 C65,78 76,70 78,70 V82 C76,82 65,90 54,82 C43,90 32,82 32,82 Z"
        android:strokeWidth="0.5"
        android:strokeColor="#4D000000">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startY="70"
                android:startX="54"
                android:endY="90"
                android:endX="54"
                android:type="linear">
                <item android:offset="0.0" android:color="#FFFFD700"/> <!-- Gold -->
                <item android:offset="1.0" android:color="#FFFFA000"/> <!-- Amber -->
            </gradient>
        </aapt:attr>
    </path>
    <!-- Center Crease -->
    <path
        android:pathData="M54,70 V82"
        android:strokeWidth="1.5"
        android:strokeColor="#B28900"
        android:strokeLineCap="round"/>

    <!-- 3. DYNAMIC SOUND WAVES (Ascending into Headphones) -->
    <!-- Left Curve -->
    <path
        android:pathData="M46,64 Q42,54 38,44"
        android:strokeWidth="2.5"
        android:strokeLineCap="round">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startY="64"
                android:startX="46"
                android:endY="44"
                android:endX="38"
                android:type="linear">
                <item android:offset="0.0" android:color="#FF00BFA5"/> <!-- Teal -->
                <item android:offset="1.0" android:color="#8000BFA5"/> <!-- Fading Teal -->
            </gradient>
        </aapt:attr>
    </path>
    <!-- Right Curve -->
    <path
        android:pathData="M62,64 Q66,54 70,44"
        android:strokeWidth="2.5"
        android:strokeLineCap="round">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startY="64"
                android:startX="62"
                android:endY="44"
                android:endX="70"
                android:type="linear">
                <item android:offset="0.0" android:color="#FF00BFA5"/>
                <item android:offset="1.0" android:color="#8000BFA5"/>
            </gradient>
        </aapt:attr>
    </path>
    <!-- Center Pulse -->
    <path
        android:pathData="M54,60 V38"
        android:strokeWidth="3"
        android:strokeLineCap="round">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startY="60"
                android:startX="54"
                android:endY="38"
                android:endX="54"
                android:type="linear">
                <item android:offset="0.0" android:color="#FFFFFFFF"/>
                <item android:offset="1.0" android:color="#00FFFFFF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- 4. EAR CUPS (The Finish) -->
    <!-- Left Cup -->
    <path
        android:pathData="M28,42 L28,64 C28,68 31,70 34,70 H36 V36 H34 C31,36 28,38 28,42 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="32"
                android:centerY="53"
                android:gradientRadius="14"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFB388FF"/> <!-- Light highlight -->
                <item android:offset="1.0" android:color="#FF6200EE"/> <!-- Deep base -->
            </gradient>
        </aapt:attr>
    </path>
    <!-- Right Cup -->
    <path
        android:pathData="M80,42 L80,64 C80,68 77,70 74,70 H72 V36 H74 C77,36 80,38 80,42 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="76"
                android:centerY="53"
                android:gradientRadius="14"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFB388FF"/>
                <item android:offset="1.0" android:color="#FF6200EE"/>
            </gradient>
        </aapt:attr>
    </path>

</vector>
